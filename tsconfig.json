{
	"compilerOptions": {
		"types": [
			"@dcloudio/types",
			"miniprogram-api-typings",
			"mini-types",
			"vite/client",
			"vue"
		],
		"esModuleInterop": true,
		"moduleResolution": "node",
		"target": "esnext",
		"skipLibCheck": true,
		"module": "esnext",
		"lib": [
			"esnext",
			"dom"
		],
		"exclude": [
			"node_modules"
		],
		"include": [
			"src/**/*.ts",
			"src/**/*.d.ts",
			"src/**/*.tsx",
			"src/**/*.vue"
		],
		"baseUrl": "./",
		"paths": {
			"@/*": [
				"*"
			]
		}
	}
}