{
	"compilerOptions": {
		"types": [
			"@dcloudio/types",
			"miniprogram-api-typings",
			"mini-types",
			"vite/client",
			"vue",
			"z-paging/global.d.ts",
			"pinia"
		],
		"esModuleInterop": true,
		"moduleResolution": "node",
		"target": "esnext",
		"skipLibCheck": true,
		"module": "esnext",
		"lib": [
			"esnext",
			"dom"
		],
		"baseUrl": "./",
		"paths": {
			"@/*": [
				"*"
			]
		}
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue"
	]
}